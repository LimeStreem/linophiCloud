@model dynamic

@{
    Layout = "../Shared/_BaseLayout.cshtml";
}
@section CSS
{
    <link href="~/Content/css/View/index.css" rel="stylesheet" />
    <link href="~/Content/css/Novel/novel-viewer.css" rel="stylesheet" />
    <style>
        #right {
            position: relative;
        }

        #right button {
            position: absolute;
            font-size: 16px;
            bottom: 7.5em;
            right: 11em;
            padding: 0.3em 0.6em;
            -moz-box-sizing: content-box;
            -webkit-box-sizing: content-box;
            box-sizing: content-box;
            border-radius: 0.3em;
            border: 1px solid #81c8ff;
            color: #0e96ff;
            background: #d8eeff;
        }

        #right button:nth-child(2) {
            bottom: 3.5em;
        }

        #right > img {
            height: 100%;
        }

        h4 {
            font-weight: bold;
            font-size: 18px;
            color:#000;
            margin-bottom: 10px;
            border-left: 1px solid #bbb;
        }


    </style>
}
@section JS
{
    <script src="~/Scripts/Utility/HeightStretcher.js"></script>
    <script src="~/Scripts/Novel/novel-editor.js"></script>
    <script src="~/Scripts/Novel/ParagraphFactory.js"></script>
    <script src="~/Scripts/View/index.js"></script>
    <script src="~/Scripts/Novel/novel-viewer.js"></script>
}
<div id="container">
    <!-- ▼ ヘッダー -->
    <header>
        <a class="Topimage" href="#"><img src="/Content/imgs/View/goHome.png" alt="TAG index"></a>
        <a class="toTop" href="#">トップに戻る</a>
    </header>

    <!-- ▼ コンテンツ内容 -->
    <article>
        <a href="#"><img class="img-to-right" src="/Content/imgs/View/pageRight.svg" alt="次のページへ"></a>
        <a href="#"><img class="img-to-left" src="/Content/imgs/View/pageLeft.svg" alt="前のページへ"></a>
        <section id="left" class="novel-side">
            <div id="left-inner">
                <h4>コメント</h4>
                <p>縦書きで表示されます。</p>
                <p>この本はもっと若い時に読んでおきたかったなあ</p>
                
                <h4>評価</h4>
                <p>★：608</p>
            </div>
        </section>
        <section id="right" class="novel-side">
            <img src="~/Content/imgs/Home/book.jpg" />
            <button>別の帯を見る</button>
            <button>帯を作る</button>
        </section>
    </article>

    <!-- ▼ フッター -->
    <footer>
        <div class="footer-line"></div>
        <div class="postit">
            <ul>
                <li>
                </li>
            </ul>
        </div>
    </footer>
</div>